<div class="content-wrapper">
    <!-- Cabeçalho -->
    <div class="header-section">
        <a href="/courses/<%= course._id %>" class="back-link">
            <i class="fas fa-arrow-left"></i> Voltar para o Curso
        </a>
    </div>

    <!-- Informações do Certificado -->
    <div class="certificate-section">
        <div class="certificate-header">
            <h1>Certificado</h1>
            <h2><%= course.title %></h2>
            <div class="course-meta">
                <span><i class="fas fa-clock"></i> <%= duration %> Horas</span>
                <span><i class="fas fa-layer-group"></i> Módulo Único</span>
            </div>
        </div>

        <!-- Preview do Certificado -->
        <div class="certificate-preview">
            <img src="/certificates/<%= certificateFileName %>" alt="Certificado" />
        </div>

        <!-- Ações do Certificado -->
        <div class="certificate-actions">
            <a href="/certificates/<%= certificateFileName %>" 
               download 
               class="btn btn-primary btn-lg">
                <i class="fas fa-download me-2"></i>
                Download
            </a>
            <a href="https://www.linkedin.com/sharing/share-offsite/?url=<%= certificateUrl %>" 
               target="_blank" 
               class="btn btn-linkedin btn-lg">
                <i class="fab fa-linkedin me-2"></i>
                Compartilhar no LinkedIn
            </a>
        </div>
    </div>
</div>

