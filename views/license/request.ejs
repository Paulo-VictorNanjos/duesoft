<style>
:root {
    --bg-main: #0f172a;
    --bg-card: #1e293b;
    --bg-hover: #2d3748;
    --text-primary: #f1f5f9;
    --text-secondary: #94a3b8;
    --primary: #6366f1;
    --primary-dark: #4f46e5;
    --secondary: #818cf8;
    --border-color: #334155;
    --success: #10b981;
    --warning: #f59e0b;
    --info: #3b82f6;
    --danger: #ef4444;
}

.content-wrapper {
    background: var(--bg-main);
    min-height: 100vh;
    padding: 2rem 0;
}

.container {
    max-width: 800px;
}

.card {
    background: var(--bg-card) !important;
    border: 1px solid var(--border-color) !important;
    border-radius: 1rem;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease;
}

.card:hover {
    transform: translateY(-5px);
}

.card-title {
    font-size: 1.75rem;
    font-weight: 600;
    display: flex;
    align-items: center;
    gap: 0.75rem;
    color: var(--text-primary) !important;
}

.card-title i {
    color: var(--primary);
    font-size: 1.5rem;
}

/* Detalhes da Licença */
.license-details {
    background: var(--bg-hover);
    border-radius: 0.75rem;
    padding: 1.5rem;
    margin-top: 1rem;
}

.license-details .row {
    margin: 0 -0.75rem;
}

.license-details .col-md-6 {
    padding: 0.75rem;
}

.license-details p {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 0.75rem;
    color: var(--text-primary) !important;
}

.license-details p i {
    color: var(--primary);
    width: 20px;
    text-align: center;
}

.license-details p strong {
    color: var(--text-secondary);
    margin-right: 0.5rem;
}

/* Formulário */
.form-label {
    color: var(--text-primary) !important;
    font-weight: 500;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 0.5rem;
}

.form-label i {
    color: var(--primary);
    width: 20px;
    text-align: center;
}

.form-control, .form-select {
    background: var(--bg-hover) !important;
    border: 1px solid var(--border-color) !important;
    color: var(--text-primary) !important;
    border-radius: 0.75rem;
    padding: 0.75rem 1rem;
    transition: all 0.3s ease;
}

.form-control:focus, .form-select:focus {
    border-color: var(--primary) !important;
    box-shadow: 0 0 0 0.25rem rgba(99, 102, 241, 0.25);
}

.form-control::placeholder {
    color: var(--text-secondary);
}

/* Badges e Status */
.badge {
    padding: 0.5rem 1rem;
    border-radius: 0.75rem;
    font-weight: 500;
}

.badge.bg-success {
    background: var(--success) !important;
}

.badge.bg-warning {
    background: var(--warning) !important;
}

.badge.bg-danger {
    background: var(--danger) !important;
}

/* Alertas */
.alert {
    border-radius: 1rem;
    border: none;
    padding: 1rem 1.25rem;
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1.5rem;
}

.alert i {
    font-size: 1.25rem;
}

.alert-success {
    background: rgba(16, 185, 129, 0.2);
    color: #10b981;
}

.alert-danger {
    background: rgba(239, 68, 68, 0.2);
    color: #ef4444;
}

.alert-info {
    background: rgba(59, 130, 246, 0.2);
    color: #3b82f6;
}

.alert-warning {
    background: rgba(245, 158, 11, 0.2);
    color: #f59e0b;
}

/* Botões */
.btn {
    border-radius: 0.75rem;
    padding: 0.75rem 1.5rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-weight: 500;
    transition: all 0.3s ease;
}

.btn i {
    font-size: 1.1rem;
}

.btn-primary {
    background: var(--primary);
    border-color: var(--primary);
}

.btn-primary:hover {
    background: var(--primary-dark);
    border-color: var(--primary-dark);
    transform: translateY(-2px);
}

/* Responsividade */
@media (max-width: 768px) {
    .content-wrapper {
        padding: 1rem;
    }
    
    .license-details .col-md-6 {
        margin-bottom: 1rem;
    }
    
    .btn {
        width: 100%;
        justify-content: center;
    }
}
</style>

<div class="content-wrapper">
    <div class="container">
        <div class="card">
            <div class="card-body">
                <h2 class="card-title mb-4">
                    <i class="fas fa-key"></i>
                    Licença
                </h2>

                <% if (error && error.length > 0) { %>
                    <div class="alert alert-danger">
                        <i class="fas fa-exclamation-circle"></i>
                        <%= error %>
                    </div>
                <% } %>

                <% if (success && success.length > 0) { %>
                    <div class="alert alert-success">
                        <i class="fas fa-check-circle"></i>
                        <%= success %>
                    </div>
                <% } %>

                <% if (license) { %>
                    <div class="alert alert-success">
                        <i class="fas fa-check-circle"></i>
                        Você possui uma licença ativa
                    </div>
                    
                    <div class="license-details">
                        <h5 class="card-title mb-4">
                            <i class="fas fa-certificate"></i>
                            Detalhes da Licença
                        </h5>
                        <div class="row">
                            <div class="col-md-6">
                                <p>
                                    <i class="fas fa-clock"></i>
                                    <strong>Tipo:</strong> 
                                    <%= license.type === 'monthly' ? 'Mensal' : 
                                       license.type === 'quarterly' ? 'Trimestral' : 'Anual' %>
                                </p>
                                <p>
                                    <i class="fas fa-calendar"></i>
                                    <strong>Data de Expiração:</strong> 
                                    <%= new Date(license.expiryDate).toLocaleDateString() %>
                                </p>
                            </div>
                            <div class="col-md-6">
                                <p>
                                    <i class="fas fa-check-circle"></i>
                                    <strong>Status:</strong> 
                                    <span class="badge bg-success">Ativa</span>
                                </p>
                                <p>
                                    <i class="fas fa-calendar-plus"></i>
                                    <strong>Data de Ativação:</strong> 
                                    <%= new Date(license.createdAt).toLocaleDateString() %>
                                </p>
                            </div>
                        </div>
                    </div>

                <% } else if (existingRequest) { %>
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i>
                        <div>
                            Você já possui uma solicitação pendente
                            <div class="mt-2">
                                <strong>Status:</strong> 
                                <span class="badge bg-<%= existingRequest.status === 'pending' ? 'warning' : (existingRequest.status === 'approved' ? 'success' : 'danger') %>">
                                    <%= existingRequest.status === 'pending' ? 'Pendente' : (existingRequest.status === 'approved' ? 'Aprovada' : 'Rejeitada') %>
                                </span>
                            </div>
                            <% if (existingRequest.notes) { %>
                                <div class="mt-2">
                                    <strong>Observações:</strong>
                                    <p class="mb-0"><%= existingRequest.notes %></p>
                                </div>
                            <% } %>
                        </div>
                    </div>
                <% } else { %>
                    <form action="/license/request" method="POST" class="needs-validation" novalidate>
                        <div class="mb-3">
                            <label for="company" class="form-label">
                                <i class="fas fa-building"></i>
                                Empresa
                            </label>
                            <select id="company" name="company" class="form-select" required>
                                <option value="" selected disabled>Selecione uma empresa</option>
                                <% companies.forEach(company => { %>
                                    <option value="<%= company._id %>"><%= company.name %></option>
                                <% }); %>
                            </select>
                            <div class="invalid-feedback">
                                Campo obrigatório
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="role" class="form-label">
                                <i class="fas fa-user-tie"></i>
                                Função na Empresa
                            </label>
                            <input type="text" 
                                   class="form-control"
                                   id="role" 
                                   name="role" 
                                   placeholder="Ex: Gerente de Projetos"
                                   required>
                            <div class="invalid-feedback">
                                Campo obrigatório
                            </div>
                        </div>

                        <div class="mb-4">
                            <label for="type" class="form-label">
                                <i class="fas fa-clock"></i>
                                Tipo de Licença
                            </label>
                            <select class="form-select"
                                    id="type" 
                                    name="type" 
                                    required>
                                <option value="" selected disabled>Selecione um plano</option>
                                <option value="monthly">Mensal</option>
                                <option value="quarterly">Trimestral</option>
                                <option value="yearly">Anual</option>
                            </select>
                            <div class="invalid-feedback">
                                Selecione um tipo de licença
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-paper-plane"></i>
                                Enviar Solicitação
                            </button>
                        </div>
                    </form>
                <% } %>
            </div>
        </div>
    </div>
</div>

<script>
(function () {
    'use strict'
    var forms = document.querySelectorAll('.needs-validation')
    Array.prototype.slice.call(forms)
        .forEach(function (form) {
            form.addEventListener('submit', function (event) {
                if (!form.checkValidity()) {
                    event.preventDefault()
                    event.stopPropagation()
                }
                form.classList.add('was-validated')
            }, false)
        })
})()
</script> 