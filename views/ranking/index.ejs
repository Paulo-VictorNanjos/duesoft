<script>
document.addEventListener('DOMContentLoaded', function() {
    console.log('Usuários do Pódio:', <%= JSON.stringify(podiumUsers) %>); // Log dos usuários do pódio

    // Elementos do DOM
    const searchInput = document.querySelector('input[type="text"]');
    const levelSelect = document.querySelector('select');
    const podiumCards = document.querySelectorAll('.podium-card');
    const tableRows = document.querySelectorAll('tbody tr');

    // Função principal de filtro
    function filterElements() {
        const searchTerm = searchInput.value.toLowerCase();
        const selectedLevel = levelSelect.value;

        // Filtrar cards do pódio
        podiumCards.forEach(card => {
            const name = card.querySelector('h5').textContent.toLowerCase();
            const xp = parseInt(card.querySelector('.fa-star').closest('.stat-item').textContent);
            const level = Math.floor(xp / 1000) + 1;
            
            const matchesSearch = name.includes(searchTerm);
            const matchesLevel = selectedLevel === 'Todos os Níveis' || getLevelCategory(level) === selectedLevel;
            
            card.closest('.col-md-4').style.display = 
                (matchesSearch && matchesLevel) ? 'flex' : 'none';
        });

        // Filtrar linhas da tabela
        let visibleRank = 4;
        tableRows.forEach(row => {
            const name = row.querySelector('.fw-bold').textContent.toLowerCase();
            const xp = parseInt(row.querySelector('.fa-star').nextElementSibling.textContent);
            const level = Math.floor(xp / 1000) + 1;
            
            const matchesSearch = name.includes(searchTerm);
            const matchesLevel = selectedLevel === 'Todos os Níveis' || getLevelCategory(level) === selectedLevel;
            
            if (matchesSearch && matchesLevel) {
                row.style.display = '';
                // Atualiza o número de ranking
                const rankBadge = row.querySelector('.badge');
                if (rankBadge) {
                    rankBadge.textContent = `${visibleRank}º`;
                    visibleRank++;
                }
                row.style.animation = 'slideIn 0.3s ease';
            } else {
                row.style.display = 'none';
            }
        });
    }

    // Função para determinar a categoria do nível
    function getLevelCategory(level) {
        if (level <= 5) return 'Iniciante';
        if (level <= 15) return 'Intermediário';
        return 'Avançado';
    }

    // Event listeners
    searchInput.addEventListener('input', filterElements);
    levelSelect.addEventListener('change', filterElements);

    // Inicializa tooltips
    const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
    const tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
        return new bootstrap.Tooltip(tooltipTriggerEl)
    });

    // Animação das barras de progresso
    const progressBars = document.querySelectorAll('.progress-bar');
    progressBars.forEach(bar => {
        const width = bar.style.width;
        bar.style.width = '0%';
        setTimeout(() => {
            bar.style.width = width;
        }, 100);
    });

    // Animação inicial dos cards e linhas
    function addInitialAnimations() {
        podiumCards.forEach((card, index) => {
            card.style.animationDelay = `${index * 0.1}s`;
            card.style.animation = 'slideIn 0.3s ease backwards';
        });

        tableRows.forEach((row, index) => {
            row.style.animationDelay = `${index * 0.05}s`;
            row.style.animation = 'slideIn 0.3s ease backwards';
        });
    }

    addInitialAnimations();
});
</script>