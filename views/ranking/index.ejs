<style>
:root {
    --bg-main: #0f172a;
    --bg-card: #1e293b;
    --bg-hover: #2d3748;
    --text-primary: #f1f5f9;
    --text-secondary: #94a3b8;
    --primary: #6366f1;
    --primary-dark: #4f46e5;
    --secondary: #818cf8;
    --border-color: #334155;
    --success: #10b981;
    --warning: #f59e0b;
    --info: #3b82f6;
    --shadow-sm: 0 2px 4px rgba(0, 0, 0, 0.3);
    --shadow-md: 0 4px 6px rgba(0, 0, 0, 0.4);
    --shadow-lg: 0 10px 15px rgba(0, 0, 0, 0.5);
}

body {
    background: var(--bg-main);
    color: var(--text-primary);
    min-height: 100vh;
}

.container-fluid {
    background: var(--bg-main) !important;
    padding: 2rem;
}

/* Cards de Estatísticas */
.card {
    background: var(--bg-card);
    border: 1px solid var(--border-color);
    border-radius: 1rem;
    box-shadow: var(--shadow-md);
    transition: all 0.3s ease;
}

.card:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-lg);
}

.card-body {
    background: var(--bg-card);
}

/* Pódio */
.podium-row {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1.5rem;
    margin: 3rem 0;
}

.podium-card {
    background: var(--bg-card);
    border-radius: 1rem;
    border: 1px solid var(--border-color);
    overflow: hidden;
    position: relative;
    width: 100%;
}

.gold {
    border-color: #ffd700;
    transform: scale(1.05);
    z-index: 3;
}

.silver {
    border-color: #c0c0c0;
    z-index: 2;
}

.bronze {
    border-color: #cd7f32;
    z-index: 1;
}

.crown {
    position: absolute;
    top: -1.5rem;
    left: 50%;
    transform: translateX(-50%);
    font-size: 2.5rem;
    color: #ffd700;
    filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.3));
}

.ribbon {
    position: absolute;
    top: 1rem;
    right: 1rem;
    padding: 0.4rem 1rem;
    border-radius: 0.5rem;
    font-size: 0.9rem;
    font-weight: 600;
    color: var(--text-primary);
    background: var(--bg-hover);
}

.avatar-container {
    width: 100px;
    height: 100px;
    margin: 1rem auto;
    position: relative;
    border-radius: 50%;
    padding: 3px;
    background: var(--bg-hover);
}

.avatar-container.large {
    width: 120px;
    height: 120px;
}

.avatar, .avatar-placeholder {
    width: 100%;
    height: 100%;
    border-radius: 50%;
    border: 2px solid var(--border-color);
    object-fit: cover;
}

.avatar-placeholder {
    background: rgba(255, 255, 255, 0.2);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 3rem;
    font-weight: bold;
    color: white;
}

.avatar-small {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: #e9ecef;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    color: #6c757d;
}

.stat-item {
    background: var(--bg-hover);
    padding: 0.5rem;
    border-radius: 0.5rem;
    font-size: 0.9rem;
    color: var(--text-primary);
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 0.5rem;
}

.stat-item i {
    color: var(--primary);
    font-size: 1rem;
}

.podium-card .btn {
    background: var(--primary);
    border: none;
    color: white;
    font-weight: 500;
    padding: 0.5rem 1rem;
    border-radius: 0.5rem;
    font-size: 0.9rem;
    margin-top: 1rem;
    width: 100%;
}

.podium-card .btn:hover {
    background: var(--primary-dark);
    transform: translateY(-2px);
}

.podium-card h5 {
    font-size: 1.2rem;
    margin: 0.5rem 0;
    font-weight: 600;
    color: var(--text-primary);
}

/* Animação de brilho para o primeiro lugar */
.gold::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 50%;
    height: 100%;
    background: linear-gradient(
        120deg,
        transparent,
        rgba(255, 255, 255, 0.3),
        transparent
    );
    animation: shine 3s infinite;
}

/* Tabela de Classificação */
.table {
    margin: 0;
}

.table th {
    background: var(--bg-hover);
    color: var(--text-secondary);
    font-weight: 600;
    padding: 1rem;
    border: none;
}

.table td {
    padding: 1rem;
    border-color: var(--border-color);
    vertical-align: middle;
}

.table tbody tr {
    transition: all 0.3s ease;
}

.table tbody tr:hover {
    background: var(--bg-hover);
}

.table-primary {
    background: rgba(99, 102, 241, 0.1) !important;
}

/* Badges e Botões */
.badge {
    padding: 0.5rem 1rem;
    border-radius: 0.75rem;
    font-weight: 500;
}

.badge.bg-secondary {
    background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%) !important;
    color: var(--text-primary);
    box-shadow: 0 2px 4px rgba(99, 102, 241, 0.3);
}

.position-badge {
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--bg-hover);
    color: var(--text-primary);
    border-radius: 50%;
    font-weight: 600;
    font-size: 0.9rem;
    margin: 0 auto;
    border: 2px solid var(--primary);
}

.btn-outline-primary {
    border-color: var(--primary);
    color: var(--primary);
}

.btn-outline-primary:hover {
    background: var(--primary);
    color: white;
}

/* Animações */
@keyframes float {
    0%, 100% { transform: translateX(-50%) translateY(0); }
    50% { transform: translateX(-50%) translateY(-15px); }
}

@keyframes shine {
    0% { background-position: 200% center; }
    100% { background-position: -200% center; }
}

/* Confetes */
.confetti {
    position: absolute;
    width: 10px;
    height: 10px;
    background: var(--primary);
    opacity: 0.8;
    animation: confetti-fall 3s linear infinite;
}

.confetti:nth-child(2n) {
    background: var(--secondary);
    animation-delay: -1.5s;
}

.confetti:nth-child(3n) {
    background: var(--warning);
    animation-delay: -1s;
}

.confetti:nth-child(4n) {
    background: var(--success);
    animation-delay: -2s;
}

@keyframes confetti-fall {
    0% { transform: translateY(-100%) rotate(0deg); }
    100% { transform: translateY(100vh) rotate(360deg); }
}

/* Responsividade */
@media (max-width: 768px) {
    .container-fluid {
        padding: 1rem;
    }

    .podium-row {
        flex-direction: column;
        gap: 1rem;
    }

    .podium-card {
        transform: none !important;
        margin-bottom: 1rem;
    }
}
</style>

