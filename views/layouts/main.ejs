    <script>
    document.addEventListener('DOMContentLoaded', () => {
        const floatingNav = document.querySelector('.floating-nav');
        const navInner = document.querySelector('.floating-nav-inner');

        if (floatingNav && navInner) {
            // Função para centralizar item ativo
            function centerActiveItem() {
                const activeItem = navInner.querySelector('.nav-btn.active');
                if (activeItem) {
                    const navWidth = navInner.offsetWidth;
                    const itemWidth = activeItem.offsetWidth;
                    const scrollLeft = activeItem.offsetLeft - (navWidth / 2) + (itemWidth / 2);
                    
                    navInner.scrollTo({
                        left: scrollLeft,
                        behavior: 'smooth'
                    });
                }
            }

            // Centraliza o item ativo no carregamento
            centerActiveItem();

            // Centraliza o item ativo quando a janela é redimensionada
            window.addEventListener('resize', centerActiveItem);

            // Melhoria na detecção de rolagem para indicadores
            const updateScrollIndicators = () => {
                const hasScrollLeft = navInner.scrollLeft > 10;
                const hasScrollRight = navInner.scrollLeft < (navInner.scrollWidth - navInner.clientWidth - 10);

                floatingNav.classList.toggle('show-left-indicator', hasScrollLeft);
                floatingNav.classList.toggle('show-right-indicator', hasScrollRight);
            };

            // Observador de mutações para atualizar indicadores quando o conteúdo muda
            const observer = new MutationObserver(updateScrollIndicators);
            observer.observe(navInner, { childList: true, subtree: true });

            navInner.addEventListener('scroll', updateScrollIndicators);
            window.addEventListener('resize', updateScrollIndicators);
            updateScrollIndicators();
        }
    });
    </script>

    <script>
    document.addEventListener('DOMContentLoaded', () => {
        const sidebar = document.querySelector('.sidebar-nav');
        const sidebarToggle = document.getElementById('sidebarToggle');
        const body = document.body;

        if (sidebar && sidebarToggle) {
            // Recuperar estado da sidebar do localStorage
            const sidebarState = localStorage.getItem('sidebarState');
            if (sidebarState === 'collapsed') {
                body.classList.add('sidebar-collapsed');
            }

            // Toggle sidebar
            sidebarToggle.addEventListener('click', () => {
                body.classList.toggle('sidebar-collapsed');
                localStorage.setItem('sidebarState', 
                    body.classList.contains('sidebar-collapsed') ? 'collapsed' : 'expanded'
                );
            });

            // Mobile sidebar toggle
            if (window.innerWidth <= 1024) {
                sidebarToggle.addEventListener('click', () => {
                    sidebar.classList.toggle('show');
                });

                // Close sidebar when clicking outside
                document.addEventListener('click', (e) => {
                    if (!sidebar.contains(e.target) && !sidebarToggle.contains(e.target)) {
                        sidebar.classList.remove('show');
                    }
                });
            }

            // Update sidebar state on window resize
            window.addEventListener('resize', () => {
                if (window.innerWidth > 1024) {
                    sidebar.classList.remove('show');
                }
            });

            // Tooltips para modo collapsed
            const navButtons = document.querySelectorAll('.nav-btn');
            navButtons.forEach(btn => {
                const tooltip = document.createElement('div');
                tooltip.className = 'nav-tooltip';
                tooltip.textContent = btn.getAttribute('data-tooltip');
                
                btn.addEventListener('mouseenter', () => {
                    if (body.classList.contains('sidebar-collapsed')) {
                        document.body.appendChild(tooltip);
                        const rect = btn.getBoundingClientRect();
                        tooltip.style.top = rect.top + (rect.height / 2) - (tooltip.offsetHeight / 2) + 'px';
                        tooltip.style.left = rect.right + 10 + 'px';
                    }
                });

                btn.addEventListener('mouseleave', () => {
                    if (tooltip.parentNode) {
                        tooltip.parentNode.removeChild(tooltip);
                    }
                });
            });
        }
    });
    </script>
