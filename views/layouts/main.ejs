    <!-- Sidebar Navigation Script -->
        <script>
    document.addEventListener('DOMContentLoaded', function() {
            const body = document.body;
        const sidebarToggle = document.getElementById('sidebarToggle');
        const isMobile = window.innerWidth <= 768;

        // Restaurar estado do sidebar do localStorage
        const sidebarCollapsed = localStorage.getItem('sidebarCollapsed') === 'true';
        if (!isMobile && sidebarCollapsed) {
                    body.classList.add('sidebar-collapsed');
                }

        // Toggle do sidebar
        sidebarToggle.addEventListener('click', function() {
            if (isMobile) {
                body.classList.toggle('sidebar-visible');
            } else {
                    body.classList.toggle('sidebar-collapsed');
                localStorage.setItem('sidebarCollapsed', body.classList.contains('sidebar-collapsed'));
            }
        });

        // Fechar sidebar ao clicar fora em dispositivos móveis
        document.addEventListener('click', function(e) {
            if (isMobile && 
                body.classList.contains('sidebar-visible') && 
                !e.target.closest('.sidebar-nav') && 
                !e.target.closest('.sidebar-toggle')) {
                body.classList.remove('sidebar-visible');
            }
        });

        // Ajustar para dispositivos móveis
        window.addEventListener('resize', function() {
            const newIsMobile = window.innerWidth <= 768;
            if (newIsMobile !== isMobile) {
                body.classList.remove('sidebar-collapsed', 'sidebar-visible');
                if (!newIsMobile && sidebarCollapsed) {
                    body.classList.add('sidebar-collapsed');
                }
            }
        });

        // Adicionar tooltips para links quando o sidebar estiver recolhido
        const navLinks = document.querySelectorAll('.nav-link');
        navLinks.forEach(link => {
                    const tooltip = document.createElement('div');
                    tooltip.className = 'nav-tooltip';
            tooltip.textContent = link.querySelector('span').textContent;
                    
            link.addEventListener('mouseenter', () => {
                        if (body.classList.contains('sidebar-collapsed')) {
                            document.body.appendChild(tooltip);
                    const rect = link.getBoundingClientRect();
                            tooltip.style.top = rect.top + (rect.height / 2) - (tooltip.offsetHeight / 2) + 'px';
                            tooltip.style.left = rect.right + 10 + 'px';
                        }
                    });

            link.addEventListener('mouseleave', () => {
                        if (tooltip.parentNode) {
                            tooltip.parentNode.removeChild(tooltip);
                        }
                    });
                });

        // Adicionar estilos para tooltips
        const style = document.createElement('style');
        style.textContent = `
            .nav-tooltip {
                position: fixed;
                background: rgba(0, 0, 0, 0.8);
                color: white;
                padding: 0.5rem 0.75rem;
                border-radius: 4px;
                font-size: 0.875rem;
                z-index: 1002;
                pointer-events: none;
                white-space: nowrap;
            }
        `;
        document.head.appendChild(style);
        });
        </script>

