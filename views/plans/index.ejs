                                    <div class="form-floating mb-3">
                                        <input type="text" class="form-control" id="companyName" 
                                               placeholder="Nome da Empresa" required>
                                        <label for="companyName">Nome da Empresa</label>
                                        <div class="invalid-feedback">
                                            Por favor, informe o nome da empresa
                                        </div>
                                    </div>

                                    <div class="form-floating mb-3">
                                        <input type="text" class="form-control" id="domain" 
                                               placeholder="Domínio" required>
                                        <label for="domain">Domínio</label>
                                        <div class="invalid-feedback">
                                            Por favor, informe o domínio
                                        </div>
                                    </div>

                                    <div class="form-floating mb-3">
                                        <input type="text" class="form-control" id="cpfCnpj" 
                                               placeholder="CPF/CNPJ" required>
                                        <label for="cpfCnpj">CPF/CNPJ</label>
                                        <div class="invalid-feedback">
                                            Por favor, informe o CPF/CNPJ
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Informações de Contato -->
                            <div class="col-md-6 mb-4">
                                <div class="form-section">
                                    <h6 class="form-section-title mb-3">
                                        <i class="bi bi-person me-2"></i>
                                        Informações de Contato
                                    </h6>
                                    <div class="form-floating mb-3">
                                        <input type="email" class="form-control" id="email" 
                                               placeholder="Email" required>
                                        <label for="email">Email</label>
                                        <div class="invalid-feedback">
                                            Por favor, informe um email válido
                                        </div>
                                    </div>

                                    <div class="form-floating mb-3">
                                        <input type="tel" class="form-control" id="phone" 
                                               placeholder="Telefone" required>
                                        <label for="phone">Telefone</label>
                                        <div class="invalid-feedback">
                                            Por favor, informe um telefone
                                        </div>
                                    </div>

                                    <div class="form-floating mb-3">
                                        <input type="text" class="form-control" id="responsible" 
                                               placeholder="Responsável" required>
                                        <label for="responsible">Responsável</label>
                                        <div class="invalid-feedback">
                                            Por favor, informe o responsável
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Endereço -->
                            <div class="col-12">
                                <div class="form-section">
                                    <h6 class="form-section-title mb-3">
                                        <i class="bi bi-geo-alt me-2"></i>
                                        Endereço
                                    </h6>
                                    <div class="form-floating">
                                        <input type="text" class="form-control" id="address" 
                                               placeholder="Endereço" required>
                                        <label for="address">Endereço Completo</label>
                                        <div class="invalid-feedback">
                                            Por favor, informe o endereço
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer border-0 justify-content-between">
                    <button type="button" class="btn btn-outline-light" data-bs-dismiss="modal">
                        <i class="bi bi-x-circle me-2"></i>
                        Cancelar
                    </button>
                    <button type="button" class="btn btn-primary" id="submitPlan">
                        <i class="bi bi-arrow-right-circle me-2"></i>
                        Continuar para Pagamento
                        <div class="spinner-border spinner-border-sm ms-2 d-none" role="status">
                            <span class="visually-hidden">Carregando...</span>
                        </div>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://js.stripe.com/v3/"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const stripe = Stripe('<%= stripePublicKey %>');
        let selectedPlan = null;
        let selectedButton = null;
        const modal = new bootstrap.Modal(document.getElementById('planFormModal'));

        function showPlanForm(plan, button) {
            selectedPlan = plan;
            selectedButton = button;
            
            const planTitles = {
                'basic': 'Plano Basic',
                'pro': 'Plano Pro',
                'enterprise': 'Plano Enterprise'
            };
            
            document.querySelector('.plan-title').textContent = planTitles[plan];
            modal.show();
        }

        document.getElementById('submitPlan').addEventListener('click', async function() {
            try {
                this.disabled = true;
                this.innerHTML = '<div class="loading-spinner"></div>Processando...';

                const companyData = {
                    name: document.getElementById('companyName').value,
                    email: document.getElementById('email').value,
                    domain: document.getElementById('domain').value,
                    cpfCnpj: document.getElementById('cpfCnpj').value,
                    address: document.getElementById('address').value,
                    phone: document.getElementById('phone').value,
                    responsible: document.getElementById('responsible').value
                };

                // Validar campos
                const emptyFields = Object.entries(companyData)
                    .filter(([_, value]) => !value)
                    .map(([key]) => key);

                if (emptyFields.length > 0) {
                    throw new Error('Por favor, preencha todos os campos obrigatórios');
                }

                const response = await fetch('/plans/checkout', {
                    method: 'POST',
                    headers: { 
                        'Content-Type': 'application/json',
                        'Accept': 'application/json'
                    },
                    body: JSON.stringify({ 
                        plan: selectedPlan, 
                        companyData 
                    })
                });

                if (!response.ok) {
                    const errorData = await response.json();
                    throw new Error(errorData.error || 'Erro ao criar sessão de checkout');
                }

                const { sessionId } = await response.json();
                const result = await stripe.redirectToCheckout({ sessionId });

                if (result.error) {
                    throw new Error(result.error.message);
                }
            } catch (error) {
                console.error('Erro:', error);
                alert(error.message || 'Erro ao processar checkout. Tente novamente.');
            } finally {
                this.disabled = false;
                this.innerHTML = 'Continuar para Pagamento';
            }
        });

        // Validação do formulário
        const form = document.getElementById('companyForm');
        
        form.addEventListener('submit', function(event) {
            if (!form.checkValidity()) {
                event.preventDefault();
                event.stopPropagation();
            }
            form.classList.add('was-validated');
        });

        // Máscara para CPF/CNPJ
        const cpfCnpjInput = document.getElementById('cpfCnpj');
        cpfCnpjInput.addEventListener('input', function(e) {
            let value = e.target.value.replace(/\D/g, '');
            if (value.length <= 11) {
                value = value.replace(/(\d{3})(\d{3})(\d{3})(\d{2})/, '$1.$2.$3-$4');
            } else {
                value = value.replace(/(\d{2})(\d{3})(\d{3})(\d{4})(\d{2})/, '$1.$2.$3/$4-$5');
            }
            e.target.value = value;
        });

        // Máscara para telefone
        const phoneInput = document.getElementById('phone');
        phoneInput.addEventListener('input', function(e) {
            let value = e.target.value.replace(/\D/g, '');
            value = value.replace(/(\d{2})(\d{5})(\d{4})/, '($1) $2-$3');
            e.target.value = value;
        });
    </script>
