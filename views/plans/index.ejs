                    </a>
                    <a href="#features" class="btn-hero secondary">
                        CONHEÇA OS RECURSOS
                        <i class="bi bi-grid-3x3-gap"></i>
                    </a>
                </div>
            </div>
        </div>
    </section>

    <div class="container py-5">
        <div class="row justify-content-center">
            <!-- Plano Basic -->
            <div class="col-md-4 animate__animated animate__fadeInUp">
                <div class="plan-card">
                    <h3>Basic</h3>
                    <div class="plan-price">R$ 99<small>/mês</small></div>
                    
                    <div class="features-grid">
                        <div class="feature-item">
                            <i class="bi bi-people-fill"></i>
                            <span>10 Usuários</span>
                        </div>
                        <div class="feature-item">
                            <i class="bi bi-headset"></i>
                            <span>Suporte Email</span>
                        </div>
                        <div class="feature-item">
                            <i class="bi bi-graph-up"></i>
                            <span>Analytics Básico</span>
                        </div>
                        <div class="feature-item">
                            <i class="bi bi-shield-check"></i>
                            <span>Segurança</span>
                        </div>
                    </div>

                    <button class="btn btn-plan basic w-100" onclick="showPlanForm('basic', this)">
                        Começar Agora
                    </button>
                </div>
            </div>

            <!-- Plano Pro -->
            <div class="col-md-4 animate__animated animate__fadeInUp animate__delay-1s">
                <div class="plan-card pro">
                    <div class="popular-badge">Mais Popular</div>
                    <h3>Pro</h3>
                    <div class="plan-price">R$ 199<small>/mês</small></div>
                    
                    <div class="features-grid">
                        <div class="feature-item">
                            <i class="bi bi-people-fill"></i>
                            <span>50 Usuários</span>
                        </div>
                        <div class="feature-item">
                            <i class="bi bi-headset"></i>
                            <span>Suporte 24/7</span>
                        </div>
                        <div class="feature-item">
                            <i class="bi bi-graph-up"></i>
                            <span>Analytics Pro</span>
                        </div>
                        <div class="feature-item">
                            <i class="bi bi-shield-check"></i>
                            <span>Segurança Avançada</span>
                        </div>
                    </div>

                    <button class="btn btn-plan pro w-100" onclick="showPlanForm('pro', this)">
                        Escolher Pro
                    </button>
                </div>
            </div>

            <!-- Plano Enterprise -->
            <div class="col-md-4 animate__animated animate__fadeInUp animate__delay-2s">
                <div class="plan-card enterprise">
                    <h3>Enterprise</h3>
                    <div class="plan-price">R$ 399<small>/mês</small></div>
                    
                    <div class="features-grid">
                        <div class="feature-item">
                            <i class="bi bi-people-fill"></i>
                            <span>Ilimitado</span>
                        </div>
                        <div class="feature-item">
                            <i class="bi bi-headset"></i>
                            <span>Suporte VIP</span>
                        </div>
                        <div class="feature-item">
                            <i class="bi bi-graph-up"></i>
                            <span>Analytics Custom</span>
                        </div>
                        <div class="feature-item">
                            <i class="bi bi-shield-check"></i>
                            <span>Segurança Elite</span>
                        </div>
                    </div>

                    <button class="btn btn-plan enterprise w-100" onclick="showPlanForm('enterprise', this)">
                        Contatar Vendas
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal do Formulário -->
    <div class="modal fade" id="planFormModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <div class="modal-header border-0 position-relative">
                    <div class="position-absolute w-100 h-100 top-0 start-0" 
                         style="background: var(--gradient-2); opacity: 0.1; z-index: 0;"></div>
                    <h5 class="modal-title position-relative" style="z-index: 1;">
                        <i class="bi bi-building me-2"></i>
                        Complete seu Cadastro
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body p-4">
                    <div class="selected-plan-info mb-4 text-center">
                        <span class="badge bg-primary mb-2">Plano Selecionado</span>
                        <h4 class="plan-title mb-0"></h4>
                    </div>

                    <form id="companyForm" class="needs-validation" novalidate>
                        <div class="row">
                            <!-- Informações da Empresa -->
                            <div class="col-md-6 mb-4">
                                <div class="form-section">
                                    <h6 class="form-section-title mb-3">
                                        <i class="bi bi-building me-2"></i>
                                        Dados da Empresa
