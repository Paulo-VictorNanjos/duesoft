    gap: 1rem;
    border-top: 1px solid var(--gray-800);
    padding-top: 1.5rem;
}

.testimonial-author img {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    object-fit: cover;
    border: 2px solid var(--primary-color);
}

.author-info h4 {
    color: var(--light-color);
    font-size: 1.1rem;
    font-weight: 600;
    margin: 0 0 0.25rem 0;
}

.author-info p {
    color: var(--primary-color);
    font-size: 0.9rem;
    margin: 0;
}

