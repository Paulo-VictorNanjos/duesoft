    border-color: var(--primary-color);
    box-shadow: 0 4px 20px rgba(255, 107, 0, 0.15);
}

.quote-icon {
    color: var(--primary-color);
    font-size: 2rem;
    margin-bottom: 1rem;
    opacity: 0.5;
}

.testimonial-content p {
