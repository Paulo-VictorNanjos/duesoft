    .testimonials {
        padding: 4rem 0;
    }

    .section-header h2 {
        font-size: 2.5rem;
    }

    .section-header p {
        font-size: 1.1rem;
    }

    .testimonials-grid {
        grid-template-columns: 1fr;
        gap: 1.5rem;
    }
